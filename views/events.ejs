<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Events</title>
  <link rel="stylesheet" href="/styles.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      padding: 20px;
      background: #f7f7f7;
    }
    .container {
      display: flex;
      flex-wrap: wrap;
      gap: 20px;
    }
    .event {
      background: #fff;
      padding: 15px 20px;
      border-radius: 15px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.1);
      width: 250px;
      transition: transform 0.2s;
    }
    .event:hover {
      transform: translateY(-5px);
    }
    .event h2 {
      margin-top: 0;
      font-size: 20px;
      color: #333;
    }
    .event p {
      margin: 5px 0;
      color: #555;
    }
    .event button {
      margin-top: 10px;
      background-color: #0070ba;
      color: #fff;
      border: none;
      padding: 8px 12px;
      border-radius: 8px;
      cursor: pointer;
      font-size: 14px;
    }
    .event button:hover {
      background-color: #005fa3;
    }
    a {
      display: inline-block;
      margin-top: 20px;
      text-decoration: none;
      color: #0070ba;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <h1>All Events</h1>

  <div class="container">
    <% events.forEach(event => { %>
      <div class="event">
        <h2><%= event.name %></h2>
        <p><%= event.description %></p>
        <p><strong>Price: $<%= event.price %></strong></p>
        <p>By: <%= event.creator.name %></p>

        <form action="/pay-event" method="POST">
          <input type="hidden" name="eventId" value="<%= event._id %>">
          <button type="submit">Book Now</button>
        </form>
      </div>
    <% }) %>
  </div>

  <a href="/creator/create-event">Create New Event</a>
</body>
</html>
